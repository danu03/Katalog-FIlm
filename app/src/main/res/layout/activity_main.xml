<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:padding="@dimen/activity_margin"
    tools:context=".MainActivity">

    <RelativeLayout
        android:id="@+id/layout"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <EditText
            android:hint="Cari film disini"
            android:id="@+id/field_search"
            android:layout_alignParentStart="true"
            android:layout_width="250dp"
            android:layout_height="wrap_content" />
        <ImageButton
            android:background="#0000"
            android:id="@+id/btn_clear"
            android:layout_alignBottom="@+id/field_search"
            android:layout_alignEnd="@+id/field_search"
            android:layout_alignTop="@+id/field_search"
            android:src="@drawable/ic_close_black_24dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <Button
            android:id="@+id/btn_cari"
            android:text="Cari"
            android:layout_alignParentEnd="true"
            android:layout_width="100dp"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <TextView
        android:id="@+id/status_list"
        android:text="Discovery"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <ListView
        android:id="@+id/list_film"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></ListView>

</LinearLayout>
